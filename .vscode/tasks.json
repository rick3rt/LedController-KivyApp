{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run app",
      "type": "shell",
      "command": "python3 main.py --size=500x1000 --dpi=50",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "close": false,
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Build app",
      "type": "shell",
      "command": "buildozer android debug deploy run",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "presentation": {
        "close": false,
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Test server",
      "type": "shell",
      "command": "python3 server.py",
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "options": {
        "cwd": "${workspaceFolder}/test_server"
      }
    },
    {
      "label": "Test GUI",
      "type": "shell",
      "command": "python3 test_gui.py",
      "problemMatcher": [],
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      },
      "options": {
        "cwd": "${workspaceFolder}/test"
      }
    }
  ]
}
