#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    # on_touch_up: app.get_wheel_value()

    BoxLayout:
        orientation: 'horizontal'
        padding: '5dp', '5dp', '5dp', '5dp'
        spacing: '5dp'
        size_hint_y: None
        height: '50dp'

        Button:
            text: 'Configure'
            on_release: app.open_settings()
        Button:
            text: "Test Connection"
            on_release: app.test_connection()
        Button:
            text: "Quit"
            on_release: app.stop()
    
    BoxLayout:
        size_hint_y: None
        height: '50dp'

        orientation: 'horizontal'
        spacing: '5dp'
        padding: '5dp', '5dp', '5dp', '5dp'
        Label:
            id: led_strip_status_lbl
            text: 'LED strip'
        Switch:
            id: led_strip_switch
            # bind: app.send_toggle_led()
        # Button:
        #     id: update_btn
        #     text: "Update"
        #     width: '100dp'
        #     size_hint_x: None
        #     on_release: app.send_slider_values()

    HSVSliderGroup:
        id: sldrgrp_hsv
        on_touch_move: app.send_slider_values()
        # on_touch_up: app.send_slider_values()

    Label:
        id: debug_lbl
        text: 'Ready'