#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    # on_touch_up: app.get_wheel_value()

    BoxLayout:
        orientation: 'horizontal'
        padding: '5dp', '5dp', '5dp', '5dp'
        spacing: '5dp'
        size_hint_y: None
        height: '50dp'

        Button:
            text: 'Configure'
            # on_release: app.open_settings()
        Button:
            text: "Test Connection"
            on_release: app.test_connection()
        Button:
            text: "Quit"
            on_release: app.stop()
    
    BoxLayout:
        size_hint_y: None
        height: '50dp'

        orientation: 'horizontal'
        spacing: '5dp'
        padding: '5dp', '5dp', '5dp', '5dp'
        Label:
            id: status_label
            text: 'Ready'
        Button:
            id: update_btn
            text: "Update"
            width: '100dp'
            size_hint_x: None
            on_release: app.get_slider_values()

    Slider: 
    Button:
        text: "test"

    MySlider:
        id: sldr_bright
        min: 0
        max: 255
        value: 100
        step: 1
        lbl: 'Brightness'

    MySlider:
        id: sldr_saturation
        min: 0
        max: 255
        value: 100
        step: 1
        lbl: 'Saturation'

    MySlider:
        id: sldr_hue
        min: 0
        max: 255
        value: 100
        step: 1
        lbl: 'Hue'        


    HSVColorSlider:
        id: sldr_hue
        min: 0
        max: 360
        value: 10
        step: 1

    ColorSlider:
        min: 0 
        max: 1
        step: 0.1

