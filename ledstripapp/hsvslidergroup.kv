#:kivy 2.0.0


<HSVSliderGroup>:
    orientation: 'vertical'
    # padding: '2dp'
    MySlider:
        min: 0
        max: 1
        value: 0.5
        step: 0.01
        id: sldr_saturation
        lbl: 'Saturation'
        bind: root.on_value_change(self, self.value)
    MySlider:
        min: 0
        max: 1
        value: 0.5
        step: 0.01
        id: sldr_value
        lbl: 'Brightness'
        bind: root.on_value_change(self, self.value)


    HSVColorSlider:
        id: sldr_hue
        min: 0
        max: 360
        value: 10
        step: 1
        bind: root.on_value_change(self, self.value)

    
    BoxLayout:
        orientation: 'horizontal'
        # padding: '2dp'
        Label:
            text: "Color"
        Label:
            text: "trest"
            canvas.before:
                Color:
                    rgba: root.myrgb
                Rectangle:
                    pos: self.pos
                    size: self.size


