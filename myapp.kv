#:kivy 2.0.0

<MySlider>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: root.lbl
        width: '100dp'
        size_hint_x: None
    Slider:
        id: sldr
        min: root.min
        max: root.max
        value: root.value
        bind: root.on_value_change(self, self.value)
    Label:
        text: str(round(sldr.value))
        width: '100dp'
        size_hint_x: None




BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        padding: '5dp', '5dp', '5dp', '5dp'
        spacing: '5dp'
        size_hint_y: None
        height: '50dp'

        Button:
            text: 'Configure'
            on_release: app.open_settings()
        Button:
            text: "Test Connection"
            on_release: app.test_connection()
        Button:
            text: "Quit"
            on_release: app.stop()
    BoxLayout:
        size_hint_y: None
        height: '50dp'

        orientation: 'horizontal'
        spacing: '5dp'
        padding: '5dp', '5dp', '5dp', '5dp'
        Label:
            id: status_label
            text: 'Ready'
        Button:
            id: update_btn
            text: "Update"
            width: '100dp'
            size_hint_x: None
            on_release: app.get_slider_values()


    MySlider:
        id: sldr_bright
        min: 0
        max: 255
        value: 100
        step: 1
        lbl: 'Brightness'
